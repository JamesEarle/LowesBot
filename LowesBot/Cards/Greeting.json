{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "Image",
          "url": "https://www.lowes.com/images/logos/2016_lowes_logo/lowes_logo_pms_280/Lowes_logo_pms_280.jpg",
          "size": "medium"
        },
        {
          "type": "TextBlock",
          "wrap": "true",
          "text": "%greetingtext%"
        },
        {
          "type": "Button",
          "wrap": "true"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "%option1%",
      "data": { "id": 1 }
    },
    {
      "type": "Action.Submit",
      "title": "%option2%",
      "data": { "id": 2 }
    },
    {
      "type": "Action.Submit",
      "title": "%option3%",
      "data": { "id": 3 }
    }
  ]
} 