{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "%prompt1%"
    },
    {
      "type": "Input.Text",
      "id": "orderNumber",
      "placeholder": "%prompt2%",
      "style": "text"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "%option1%",
      "data": { "id": 1 }
    },
    {
      "type": "Action.Submit",
      "title": "%option2%",
      "data": { "id": 2 }
    }
  ]
}
