{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://www.lowes.com/images/logos/2016_lowes_logo/lowes_logo_pms_280/Lowes_logo_pms_280.jpg",
      "size": "medium"
    },
    {
      "type": "TextBlock",
      "text": "%prompt1"
    },
    {
      "type": "Input.Text",
      "id": "orderNumber",
      "placeholder": "%prompt1%",
      "style": "text"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "%option1%",
      "data": { "id": 1 }
    },
    {
      "type": "Action.Submit",
      "title": "%option2%",
      "data": { "id": 2 }
    }
  ]
}
