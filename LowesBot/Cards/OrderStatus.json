{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "%value_image%",
              "size": "medium"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "FactSet",
              "facts": [
                {
                  "title": "%prompt_number%",
                  "value": "%value_number%"
                },
                {
                  "title": "%prompt_date%",
                  "value": "%value_date%"
                },
                {
                  "title": "%prompt_status%",
                  "value": "%value_status%"
                },
                {
                  "title": "%prompt_amount%",
                  "value": "%value_amount%"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "%value_details%",
      "wrap": "true"
    }

  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "%option_details%",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "TextBlock",
            "separator": "true",
            "text": "Hand saw"
          },
          {
            "type": "TextBlock",
            "separator": "true",
            "text": "Specialty wrench"
          },
          {
            "type": "TextBlock",
            "separator": "true",
            "text": "Pair of golves"
          },
          {
            "type": "TextBlock",
            "separator": "true",
            "text": "Kitchen sink"
          },
          {
            "type": "TextBlock",
            "separator": "true",
            "text": "Sand paper"
          }
        ]

      }
    }

  ]
}