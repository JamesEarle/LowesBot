{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "%value_image%",
              "size": "medium"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "%prompt_title%"
            },
            {
              "type": "FactSet",
              "facts": [
                {
                  "title": "%prompt_number%",
                  "value": "%value_number%"
                },
                {
                  "title": "%prompt_date%",
                  "value": "%value_date%"
                },
                {
                  "title": "%prompt_status%",
                  "value": "%value_status%"
                },
                {
                  "title": "%prompt_amount%",
                  "value": "%value_amount%"
                }
              ]
            },
            {
              "type": "TextBlock",
              "text": "%value_details%",
              "wrap": "true"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
  ]
}
