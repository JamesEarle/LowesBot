{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "%value_image%",
              "size": "medium"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "size": "large",
              "weight": "bolder",
              "text": "%value_name%"
            },
            {
              "type": "TextBlock",
              "size": "medium",
              "spacing": "none",
              "text": "%value_address1%"
            },
            {
              "type": "TextBlock",
              "size": "medium",
              "spacing": "none",
              "text": "%value_address2%"
            },
            {
              "type": "TextBlock",
              "size": "small",
              "spacing": "none",
              "weight": "lighter",
              "text": "%value_distance%"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "Contact Store",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "width": "1",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "%prompt_department%"
                  },
                  {
                    "type": "TextBlock",
                    "spacing": "none",
                    "text": "%value_phone%"
                  },

                  {
                    "type": "TextBlock",
                    "spacing": "none",
                    "text": "%value_hours%"
                  }
                ]
              },
              {
                "type": "Column",
                "width": "auto",
                "items": [
                  {
                    "type": "Image",
                    "url": "%value_manager_image%",
                    "size": "small",
                    "style": "person"
                  }
                ]
              },
              {
                "type": "Column",
                "width": "1",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "%value_manager_name%",
                    "weight": "bolder"
                  },
                  {
                    "type": "TextBlock",
                    "spacing": "none",
                    "text": "%value_manager_title%"
                  },
                  {
                    "type": "TextBlock",
                    "spacing": "none",
                    "text": "%value_manager_phone%"
                  }
                ]
              }

            ]
          }
        ]
      }
    },
    {
      "type": "Action.ShowCard",
      "title": "Map Store",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "Image",
            "url": "%value_map%",
            "size": "stretch"
          }
        ]

      }
    }

  ]
}
